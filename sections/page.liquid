                },
                {
                    "value": "32",
                    "label": "32px"
                },
                {
                    "value": "48",
                    "label": "48px"
                },
                {
                    "value": "56",
                    "label": "56px"
                },
                {
                    "value": "64",
                    "label": "64px"
                },
                {
                    "value": "72",
                    "label": "72px"
                },
                {
                    "value": "80",
                    "label": "80px"
                },
                {
                    "value": "96",
                    "label": "96px"
                }
            ],
            "default": "32"
        }
    ]
}
{% endschema %}

{% style %}
    #shopify-section-{{ section.id }} {
        --row: {{ section.settings.spacing_mobile }}px;
        --row-desk: {{ section.settings.spacing_desktop }}px;
        --bg-colour: {{ section.settings.background_colour }};
    }
{% endstyle %}

<div class="default-page">
    <div class="o-container o-container--box">
        {% if page.title != blank %}
            <div class="c-page-header__content">
                <h1 class="c-page-header__title text-center">
                    {{ page.title }}
                </h1>
            </div>
        {% endif %}

        {%- if page.content != blank -%}
            <div class="page-content">
                <div class="prose">
                {{ page.content }}
                </div>
            </div>
        {%- endif -%}    
    </div>
</div>



