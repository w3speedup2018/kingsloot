            "type": "color",
            "id": "heading_colour",
            "label": "Heading Colour",
            "default": "#111111",
            "info": "Pick the colour of the heading"
        },
        {
            "type": "text",
            "id": "title",
            "label": "Heading Title",
            "default": "Title",
            "info": "Add [highlight]Highlighted word[/highlight] to add colour highlight to your word"
        },
        {
            "type": "text",
            "id": "subtitle",
            "label": "Subheading Title",
            "default": "Sub Title"
        },
        {
            "type": "richtext",
            "id": "text",
            "label": "Content",
            "default": "<p>Vivamus magna justo, lacinia eget consectetur sed, convallis at tellus. Vivamus suscipit tortor eget</p>",
            "info": "For simple bullets insert the character symbol to the start of the sentence: â€¢ (new line for each bullet)"
        },
        {
            "type": "checkbox",
            "id": "border_content",
            "label": "Border Content",
            "default": true
        },
        {
            "type": "header",
            "content": "Button Settings"
        },
        {
            "type": "text",
            "id": "button_label",
            "label": "Button Label"
        },
        {
            "type": "checkbox",
            "id": "button_target",
            "label": "Open link in new tab?",
            "default": false
        },
        {
            "type": "url",
            "id": "button_link",
            "label": "Button Link"
        },
        {
            "type": "radio",
            "id": "button_type",
            "label": "Button Type",
            "options": [
                {
                    "value": "primary",
                    "label": "Primary Button"
                },
                {
                    "value": "secondary",
                    "label": "Secondary Button"
                },
                {
                    "value": "tertiary",
                    "label": "Tertiary Button"
                }
            ],
            "default": "primary"
        }
    ]
}
{% endschema %}

{% style %}
    #shopify-section-{{ section.id }} {
        --row: {{ section.settings.spacing_mobile }}px;
        --row-desk: {{ section.settings.spacing_desktop }}px;
        --bg-colour: {{ section.settings.background_colour }};
    }
{% endstyle %}

<div class="o-container">
    {%- render 'object_content',
        class: '',
        position: section.settings.content_layout,

        subcolor: section.settings.tag_color,
        subtitle: section.settings.tag_title,
        subtitle_class: 't-font-size--milli  u-mb-20',

        title: section.settings.title,
        title_tag: section.settings.heading_title_tag,
        title_class: "",
        title_color: section.settings.title_color,

        copy: section.settings.text,
        copy_color: section.settings.text_color,

        button_label: section.settings.button_label,
        button_link: section.settings.button_link,
        button_type: section.settings.button_type,
    -%}
</div>

