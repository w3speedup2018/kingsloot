            "type": "header",
            "content": "Page Header"
        },
        {
            "type": "select",
            "id": "spacing_desktop",
            "label": "Desktop Spacing",
            "info": "Adjust spacing below for desktop",
            "options": [
                {
                    "value": "0",
                    "label": "0px"
                },
                {
                    "value": "8",
                    "label": "8px"
                },
                {
                    "value": "16",
                    "label": "16px"
                },
                {
                    "value": "24",
                    "label": "24px"
                },
                {
                    "value": "32",
                    "label": "32px"
                },
                {
                    "value": "48",
                    "label": "48px"
                },
                {
                    "value": "56",
                    "label": "56px"
                },
                {
                    "value": "64",
                    "label": "64px"
                },
                {
                    "value": "72",
                    "label": "72px"
                },
                {
                    "value": "80",
                    "label": "80px"
                },
                {
                    "value": "96",
                    "label": "96px"
                }
            ],
            "default": "56"
        },
        {
            "type": "select",
            "id": "spacing_mobile",
            "label": "Mobile Spacing",
            "info": "Adjust spacing below for mobile",
            "options": [
                {
                    "value": "0",
                    "label": "0px"
                },
                {
                    "value": "8",
                    "label": "8px"
                },
                {
                    "value": "16",
                    "label": "16px"
                },
                {
                    "value": "24",
                    "label": "24px"
                },
                {
                    "value": "32",
                    "label": "32px"
                },
                {
                    "value": "48",
                    "label": "48px"
                },
                {
                    "value": "56",
                    "label": "56px"
                },
                {
                    "value": "64",
                    "label": "64px"
                },
                {
                    "value": "72",
                    "label": "72px"
                },
                {
                    "value": "80",
                    "label": "80px"
                },
                {
                    "value": "96",
                    "label": "96px"
                }
            ],
            "default": "32"
        },
        {
            "type": "text",
            "id": "title",
            "label": "Title"
        },
        {
            "type": "textarea",
            "id": "description",
            "label": "Description"
        },
        {
            "type": "header",
            "content": "Image"
        },
        {
            "type": "select",
            "id": "lazy_loading",
            "label": "Image Lazyloading",
            "info": "If this image is the first and at the top of the page. Change to eager",
            "options": [
                {
                    "value": "lazy",
                    "label": "Lazy"
                },
                {
                    "value": "eager",
                    "label": "Eager"
                }
            ],
            "default": "lazy"
        },
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image",
            "info": "Landscape orientation (21:10 w:h). 1920 x 940px minimum recommended"
        },
        {
            "type": "image_picker",
            "id": "mobile_image",
            "label": "Mobile Image",
            "info": "Landscape orientation (21:10 w:h). 1920 x 940px minimum recommended"
        },
        {
            "type": "range",
            "id": "image_x_position",
            "label": "Image X-axis Position",
            "min": 1,
            "max": 100,
            "default": 50,
            "unit": "%"
        },
        {
            "type": "range",
            "id": "image_y_position",
            "label": "Image Y-axis Position",
            "min": 1,
            "max": 100,
            "default": 50,
            "unit": "%"
        },
        {
            "id": "image_direction",
            "type": "select",
            "label": "Image Direction",
            "options": [
                {
                    "value": "left",
                    "label": "Left"
                },
                {
                    "value": "right",
                    "label": "Right"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Image With Text"
        }
    ]
}
{% endschema %}

{% style %}
    #shopify-section-{{ section.id }} {
        --row: {{ section.settings.spacing_mobile }}px;
        --row-desk: {{ section.settings.spacing_desktop }}px;
        --bg-colour: {{ section.settings.background_colour }};
    }
{% endstyle %}


{% render 'theme_assets', layout: 'section_image-text' %}

<div class="o-container o-container--full">
    <div class="c-image-text {% if section.settings.image_direction == 'right' %} row-reserve{% endif %}">

        <div class="c-image-text__image">
            {%- render 'object_image' with section.settings.image,
                mobile_image: section.settings.mobile_image,
                mobile_ratio:'434/386'
                class: 'o-ar',
                img_class: "o-ar__item"
                width: "756",
                height: "486"
            -%}
        </div>
        
        <div class="c-image-text__content">
            {% if section.settings.title != blank %}
                <h3 class="c-image-text__title"> {{section.settings.title}}</h3>

            {% endif %}
            {% if section.settings.description != blank %}
                <div class="c-image-text__description">
                    {{section.settings.description}}
                </div>
            {% endif %}

        </div>
            
    </div>
</div>

