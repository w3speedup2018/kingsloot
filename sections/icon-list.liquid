{% render 'theme_assets', layout: 'icon-list' %}

<div
    class="c-icon-list"
    style="--bg-color: {{ section.settings.bg_color }};"
>
    <div class="o-container c-icon-list__container">
        {% if section.blocks.size > 0 %}
            {% for block in section.blocks %}
                <div class="c-icon-list__item">
                    {% if block.settings.icon_image != blank %}
                        <img class="c-icon-list__item-image" loading="lazy" src="{{ block.settings.icon_image | img_url: '100x' }}" width="100" height="100" />
                    {% endif %}
                    {% if block.settings.title != blank %}
                        <h4>{{ block.settings.title }}</h4>
                    {% endif %}
                </div>
            {% endfor %}
        {% endif %}
    </div>
</div>
{% schema %}
    {
        "name": "Icon List",
        "settings": [
            {
                "type": "color",
                "id": "bg_color",
                "label": "Background Color",
                "default": "#000000"
            }
        ],
        "blocks": [
            {
                "type": "icon",
                "name": "Icon",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "icon_image",
                        "label": "Icon Image"
                    },
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Title"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Icon List",
                "category": "Content"
            }
        ]
    }
{% endschema %}