{%- liquid
    assign layout = section.settings.layout
    if layout != blank 
        assign layout = layout | prepend: 'o-grid--' | append: '@desk'
    endif
    assign background_colour = section.settings.background_colour
    assign has_background = ''
    assign media_width = section.settings.media_width
    assign container_width = section.settings.width

    if background_colour != blank
        assign has_background = 'o-container--padded'
    endif

    if section.settings.media_width == "2/3"
        assign media_width = "o-grid__item--two-third@desk"
        assign content_width = "o-grid__item--third@desk"
        assign width = 948
        assign height = 526
    else
        assign media_width = "o-grid__item--half@desk"
        assign content_width = "o-grid__item--half@desk"
        assign width = 702
        assign height = 526
    endif

    if container_width == "full"
        assign is_contained = 'o-container--full'
        if section.settings.media_width == "2/3"
            assign width = 1070
            assign height = 710
        else
            assign width = 820
            assign height = 710
        endif
    endif
-%}

{% style %}
    #shopify-section-{{ section.id }} {
        --row: {{ section.settings.spacing_mobile }}px;
        --row-desk: {{ section.settings.spacing_desktop }}px;
        --bg-colour: {{ background_colour }};
        --heading-colour: {{ section.settings.heading_colour }};
    }
{% endstyle %}

<section class="o-container {{ is_contained }} {{ has_background }}  o-grid  {{ layout }}">

    <div class="o-grid__item  {{ media_width }}">

        {%- for block in section.blocks -%}
            {%- if block.type == 'video' -%}
                {%- if block.settings.video_url != blank or block.settings.video_src != blank -%}
                    {%- liquid
                        assign img_class = ""
                        assign video_src = block.settings.video_src | default: block.settings.video_url
                    -%}

                    {%- render 'object_video' with video_src,
                        use_desktop_ratio: true,
                        autoplay: block.settings.video_autoplay,
                        muted: block.settings.video_muted,
                        image: block.settings.video_image,
                        frame_class: img_class,
                        width: width,
                        height: height,
                    -%}
                {%- endif -%}
            {%- else -%}
                 {%- if block.settings.image != blank -%}
                    {%- render 'object_image' with block.settings.image,
                        aspect_ratio: block.settings.aspect_ratio,
                        use_desktop_ratio: true,
                        loading: block.settings.lazy_loading,
                        x_position: block.settings.image_x_position,
                        y_position: block.settings.image_y_position,
                        width: width,
                        height: height,
                    -%}
                {%- endif -%}
            {%- endif -%}

            {%- if block.type == 'shop' -%}
                {% render 'component_shop-the-look'
                    product_list: block.settings.product_list,
                    button_position: block.settings.view_products_button_position,
                    button_text: block.settings.view_products_button,
                %}
            {%- endif -%}
        {%- endfor -%}

    </div>

    {%- assign content_class = content_width | prepend: 'o-grid__item  c-content--media  ' -%}
    {% render 'component_content-blocks' 
        class: content_class,
        position: section.settings.content_position,
    %}

</section>













