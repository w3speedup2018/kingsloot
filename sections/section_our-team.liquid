{% style %}
    #shopify-section-{{ section.id }} {
        --row: {{ section.settings.spacing_mobile }}px;
        --row-desk: {{ section.settings.spacing_desktop }}px;
        --bg-colour: {{ section.settings.background_colour }};
    }
{% endstyle %}

{% if section.settings.width == 'full' %}
    {% assign is_contained = 'o-container--full' %}
{% else %}
    {% assign is_contained = 'o-container--box' %}
{% endif %}

{% render 'theme_assets', layout: 'section_our-team' %}


<div class="c-ourteam">
    <div class="o-container {{ is_contained }} c-ourteam__container">
        {% if section.settings.title != blank %}
            <h3 class="c-ourteam__title">{{ section.settings.title }}</h3>
        {% endif %}
        {% if section.settings.content != blank %}
            <div class="c-ourteam__content">{{section.settings.content}}</div>
        {% endif %}
        <div class="c-ourteam__list">
            {% for block in section.blocks %}
                {% if block.type == 'member' %}
                <div class="c-ourteam__item">
                    
                        {% if block.settings.image != blank %}
                            <div class="c-ourteam__item-img">
                                {%- render 'object_image' with block.settings.image,
                                    mobile_image: block.settings.mobile_image,
                                    mobile_ratio: "344/459"
                                    class: 'c-carousel__img  o-ar  o-ar--square',
                                    img_class: "o-ar__item"
                                    width: "344",
                                    height: "459"
                                -%}
                            </div>
                        {% endif %}
                    <div class="c-ourteam__item-social">
                        {% if block.settings.facebook != blank %}
                            <a href="{{block.settings.facebook }}" target="_blank">
                                <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" clip-rule="evenodd" d="M2 0H18C19.1046 0 20 0.89543 20 2V18C20 19.1046 19.1046 20 18 20H2C0.89543 20 0 19.1046 0 18V2C0 0.89543 0.89543 0 2 0ZM2 2V18H18V2H2ZM9.13306 10.0044H11V16H13V10.0044H14.9824V8.00439H13V7C13 6.44772 13.4477 6 14 6H15V4H14C12.3431 4 11 5.34315 11 7V8.00439H9.13306V10.0044Z" fill="black"/>
                                </svg>
                            </a>
                        {% endif %}
                        {% if block.settings.insta != blank %}
                            <a href="{{block.settings.insta }}" target="_blank">
                                <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" clip-rule="evenodd" d="M14 0H6C2.68629 0 0 2.68629 0 6V14C0 17.3137 2.68629 20 6 20H14C17.3137 20 20 17.3137 20 14V6C20 2.68629 17.3137 0 14 0ZM2 6C2 3.79086 3.79086 2 6 2H14C16.2091 2 18 3.79086 18 6V14C18 16.2091 16.2091 18 14 18H6C3.79086 18 2 16.2091 2 14V6ZM10 15C7.23858 15 5 12.7614 5 10C5 7.23858 7.23858 5 10 5C12.7614 5 15 7.23858 15 10C15 12.7614 12.7614 15 10 15ZM10 13C11.6569 13 13 11.6569 13 10C13 8.34315 11.6569 7 10 7C8.34315 7 7 8.34315 7 10C7 11.6569 8.34315 13 10 13ZM16 5C16 5.55228 15.5523 6 15 6C14.4477 6 14 5.55228 14 5C14 4.44772 14.4477 4 15 4C15.5523 4 16 4.44772 16 5Z" fill="black"/>
                                </svg>
                            </a>
                        {% endif %}
                        {% if block.settings.linkedln != blank %}
                            <a href="{{block.settings.linkedln }}" target="_blank">
                                <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" clip-rule="evenodd" d="M2 0H18C19.1046 0 20 0.89543 20 2V18C20 19.1046 19.1046 20 18 20H2C0.89543 20 0 19.1046 0 18V2C0 0.89543 0.89543 0 2 0ZM2 2V18H18V2H2ZM11 7C10.4823 7 9.93525 7.15826 9.45215 7.45215L9 7H8V14H10V10C10 9.42425 10.594 9 11 9H12C12.406 9 13 9.42425 13 10V14H15V10C15 8.14718 13.394 7 12 7H11ZM6 6C6.55228 6 7 5.55228 7 5C7 4.44772 6.55228 4 6 4C5.44772 4 5 4.44772 5 5C5 5.55228 5.44772 6 6 6ZM5 7V14H7V7H5Z" fill="black"/>
                                </svg>
                            </a>
                        {% endif %}
                    </div>
                    {% if block.settings.title != blank %}
                        <h3 class="c-ourteam__item-title">{{ block.settings.title }}</h3>
                    {% endif %}
                    {% if block.settings.description != blank %}
                        <h3 class="c-ourteam__item-desc">{{ block.settings.description }}</h3>
                    {% endif %}
                    
                </div>
                {% endif %}
            {% endfor %}
        </div>
        {% for block in section.blocks %}
            {% if block.type == 'last_member' %}
            <div class="c-ourteam__last">
                {% if block.settings.image != blank %}
                    <div class="c-ourteam__last-img">
                        {%- render 'object_image' with block.settings.image,
                            mobile_image: block.settings.mobile_image,
                            mobile_ratio: "300/400"
                            class: 'c-carousel__img  o-ar  o-ar--square',
                            img_class: "o-ar__item"
                            width: "300",
                            height: "400"
                        -%}
                    </div>
                {% endif %}
                <div class="c-ourteam__last-content">
                    {% if block.settings.title != blank %}
                        <h3 class="c-ourteam__last-title">{{ block.settings.title }}</h3>
                    {% endif %}
                    {% if block.settings.description != blank %}
                        <h3 class="c-ourteam__last-desc">{{ block.settings.description }}</h3>
                    {% endif %}
                </div>
            </div>
            {% endif %}
        {% endfor %}
    </div>
</div>
