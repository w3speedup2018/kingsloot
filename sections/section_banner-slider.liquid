{%- liquid
    assign banner = section.settings
    assign banner_width = banner.width
    assign background_colour = banner.background_colour
    assign is_contained = ''
    assign autoplay = banner.auto_play
    assign show_arrows = banner.show_arrows
    assign show_pagination = banner.show_arrows

    if banner_width != "contained"
        assign is_contained = 'o-container--full'
    endif

    capture banner_height
        case banner.height
            when "full"
                echo "o-ar--banner@desk"
            else
                echo "o-ar--banner-short@desk"
        endcase
    endcapture

    capture slide_height
        echo banner_height | append: '  o-ar--mobile-banner'
    endcapture

    # Update to set screen width to initialise carousel
    capture carousel_mq
        case section.blocks.size
            when 1
                echo 'disabled'
            else
                echo ''
        endcase
    endcapture
-%}

{% style %}
    #shopify-section-{{ section.id }} {
        --row: {{ section.settings.spacing_mobile }}px;
        --row-desk: {{ section.settings.spacing_desktop }}px;
        --bg-colour: {{ background_colour }};
        {% if background_colour != 'rgba(0,0,0,0)' %}
        --padding: 64px;
        --padding-mob: 48px;
        {% endif %}
    }
{% endstyle %}

{% render 'theme_assets', layout: 'section_banner-slider' %} 

<section
    class=" o-container  {{ is_contained }}"
    style="color:{{ banner.text_color | default: '#fff' }}"
>
    <div
        class="c-carousel__slider  js-carousel  o-ar  {{ slide_height }}"
        data-settings="setGallerySize watchCSs {% if autoplay %}autoPlay{% endif %}"
        {{ carousel_mq | prepend: 'data-carousel-mq="' | append: '"' }}
    >

        {%- if section.blocks.size > 0 -%}
            {%- for slide in section.blocks limit: banner.size -%}
                {%- liquid
                    if slide.settings.mobile_stacked
                        assign class = 'c-hero__content  c-content--hero section-banner-slider'
                    elsif slide.settings.content_placement == 'top'
                        assign class = 'c-hero__content c-hero__content--top c-content--hero section-banner-slider'
                    else
                        assign class = 'c-hero__content c-content--hero section-banner-slider'
                    endif 
                        assign title_class = slide.settings.header_font_size | prepend: 't-size--' | append: '@desk  t-size--h4  u-mb-0 section-banner-slider__title'

                    if slide.settings.slide.settings.border_content
                        assign copy_class = 'u-mb-48 section-banner-slider__content'
                    else
                        assign copy_class = 'u-mb-48 section-banner-slider__content ' | append: 'border'
                    endif
                -%}

                <div class="c-hero c-hero--overlay  c-carousel__slide  o-ar  {{ slide_height }} {{ stacked }}">
                    {%- render 'component_content',
                        class: class,
                        position: slide.settings.content_position,
                        title: slide.settings.title,
                        title_tag: slide.settings.heading_title_tag,
                        title_class: title_class,
                        subtitle: slide.settings.subtitle,
                        subtitle_class: 't-size--h9  t-style--upper t-weight--400  u-mb-8',
                        copy: slide.settings.text,
                        copy_class: copy_class,
                        button_label: slide.settings.button_label,
                        button_link: slide.settings.button_link,
                        button_type: slide.settings.button_type,
                    -%}

                        {%- case slide.type -%}
                            {%- when 'image_slide' -%}
                                {%- if slide.settings.image != blank -%}
                                    {% if slide.settings.slider_link != blank %}
                                        <a href="{{ slide.settings.slider_link }}">
                                    {% endif %}
                                        {%- render 'object_image' with slide.settings.image,
                                            mobile_image: slide.settings.mobile_image,
                                            class: "c-hero__media  o-img__frame--fill",
                                            loading: block.settings.lazy_loading,
                                            x_position: slide.settings.image_x_position,
                                            y_position: slide.settings.image_y_position,
                                            loading: slide.settings.lazy_loading,
                                            width: 1680,
                                            height: 650
                                        -%}
                                    {% if slide.settings.slider_link != blank %}
                                        </a>
                                    {% endif %}
                                {%- endif -%}
                            {%- when 'video_slide' -%}
                                {%- if slide.settings.video_url != blank or slide.settings.video_src != blank -%}
                                    {%- liquid
                                        assign img_class = slide_height | strip | prepend: 'c-hero__media  o-img__frame--fill  c-video--cover  '
                                        assign video_src = slide.settings.video_src | default: slide.settings.video_url
                                    -%}

                                    {%- render 'object_video' with video_src,
                                        autoplay: slide.settings.video_autoplay,
                                        muted: slide.settings.video_muted,
                                        image: slide.settings.video_image,
                                        frame_class: img_class,
                                    -%}
                                {%- endif -%}
                        {%- endcase -%}

                    {% render 'component_shop-the-look'
                        product_list: slide.settings.product_list,
                        button_position: slide.settings.view_products_button_position,
                        button_text: slide.settings.view_products_button,
                    %}
                </div>
            {%- endfor -%}
        {%- endif -%}

        
    </div>
    {%- if section.blocks.size > 1 and show_arrows -%}
        <nav class="c-carousel__nav  c-carousel__nav--overlay">
            <button
                class="c-carousel__arrow  c-carousel__arrow--prev  js-carousel-arrow"
                data-direction="prev"
                aria-label="Previous"
            >
                {% render 'object_icon', 
                    icon: 'chevron-left',
                    class: "",
                 %}
            </button>

            <button
                class="c-carousel__arrow  c-carousel__arrow--next  js-carousel-arrow"
                data-direction="next"
                aria-label="Next"
            >
                {% render 'object_icon', 
                    icon: 'chevron-right'
                    class: "",
                %}
            </button>
        </nav>
    {%- endif -%}

    {%- if section.blocks.size > 1 and show_pagination -%}
        <nav class="c-carousel__pager  js-carousel-pager">
            {% for slide in section.blocks limit: banner.size %}
                <button
                    class="c-carousel__pager-status"
                    data-slide="{{ forloop.index0 }}"
                    aria-label="Page {{ forloop.index0 }}"
                    {%- if forloop.index0 == 0 -%}aria-current="step"{%- endif -%}
                ></button>
            {% endfor %}
        </nav><!-- /c-carousel__pager -->
    {%- endif -%}
</section>

