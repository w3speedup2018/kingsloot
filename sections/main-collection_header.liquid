{% style %}
    #shopify-section-{{ section.id }} {
        --row: {{ section.settings.spacing_mobile }}px;
        --row-desk: {{ section.settings.spacing_desktop }}px;
        --bg-colour: {{ section.settings.background_colour }};
    }
{% endstyle %}

{% render 'theme_assets', layout: 'collection-header' %}

{%- liquid
    assign settings = section.settings

    if collection.image != blank
        assign collection_image = collection.image
    elsif settings.banner_image != blank
        assign collection_image = settings.banner_image
    else
        assign collection_image = ''
    endif

    if settings.title != blank
        assign collection_title = settings.title
    else
        assign collection_title = collection.title
    endif

    if settings.text != blank
        assign collection_description = settings.text
    else
        assign collection_description = collection.description
    endif

     if collection_image != blank and settings.show_bg_image == true
        assign content_class = 'o-container  c-content--absolute'
    else
        assign content_class = 'o-container  c-content--container'
    endif
-%}

{% if collection_image != blank and settings.show_bg_image == true %}
    {%- render 'object_image' with collection_image,
        class: 'c-collection-header__image  o-ar  o-ar--banner-half'
        img_class: "o-ar__item ",
        width: 1920,
        height: 400
    -%}
{% endif %}

{%- render 'object_content',
    class: content_class,
    position: section.settings.content_layout,

    subtitle: section.settings.subtitle,
    subtitle_class: 't-font-size--milli  u-mb-20',

    title: collection_title,
    title_tag: "h1",
    title_class: '',
    title_color: section.settings.title_color,

    copy: collection_description,
    copy_color: section.settings.text_color,

    button_label: section.settings.button_label,
    button_link: section.settings.button_link,
    button_type: section.settings.button_type,
-%}

