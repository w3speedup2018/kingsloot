{%- liquid
    assign banner = section.settings
    assign banner_height = banner.height
    assign banner_width = banner.width
    assign background_colour = banner.background_colour
    assign content_placement = banner.content_placement
    assign mobile_stacked = banner.mobile_stacked
    assign is_contained = ''

    if banner_width != "contained"
        assign is_contained = ' o-container--full'
    endif

    if banner_height == "half"
        assign height = '  c-hero--short'
    endif

    if content_placement == "overlay"
        assign placement = '  c-hero--overlay'
    endif

    if mobile_stacked == true
        assign placement = ''
        assign stacked = '  c-hero--overlay@desk'
    endif

    assign media_class = "  c-hero__media  o-img__frame--fill"

-%}

{% style %}
    #shopify-section-{{ section.id }} {
        --row: {{ section.settings.spacing_mobile }}px;
        --row-desk: {{ section.settings.spacing_desktop }}px;
        --bg-colour: {{ background_colour }};
        {% if background_colour != 'rgba(0,0,0,0)' %}
            --padding: 64px;
            --padding-mob: 48px;
        {% endif %}
    }
{% endstyle %}

<section class="o-container{{ is_contained }}">

    <div class="c-hero{{ height }}{{ placement }}{{ stacked }}">
        
        {% render 'component_content-blocks' 
            class: "c-hero__content  c-content--hero c-banner__content",
            position_mobile: section.settings.content_position_mobile,
            position: section.settings.content_position,
        %}

        {%- for block in section.blocks -%}
            {%- if block.type == 'video' -%}
                {%- if block.settings.video_url != blank or block.settings.video_src != blank -%}
                    {%- liquid
                        assign img_class = ""
                        assign video_src = block.settings.video_src | default: block.settings.video_url
                    -%}

                    {%- render 'object_video' with video_src,
                        class: media_class,
                        autoplay: block.settings.video_autoplay,
                        muted: block.settings.video_muted,
                        image: block.settings.video_image,
                        frame_class: img_class,
                        width: 1680,
                        height: 670

                    -%}
                {%- endif -%}
            {%- else -%}
                 {%- if block.settings.image != blank -%}
                    {%- render 'object_image' with block.settings.image,
                        mobile_image: block.settings.mobile_image,
                        class: media_class,
                        loading: block.settings.lazy_loading,
                        x_position: block.settings.image_x_position,
                        y_position: block.settings.image_y_position,
                        width: 1680,
                        height: 670,
                    -%}
                {%- endif -%}
            {%- endif -%}

            {%- if block.type == 'shop' -%}
                {% render 'component_shop-the-look'
                    product_list: block.settings.product_list,
                    button_position: block.settings.view_products_button_position,
                    button_text: block.settings.view_products_button,
                %}
            {%- endif -%}
        {%- endfor -%}
    </div>
</section>
