        },
        {
            "type": "text",
            "id": "button_label",
            "label": "Button Label"
        },
        {
            "type": "checkbox",
            "id": "button_target",
            "label": "Open link in new tab?",
            "default": false
        },
        {
            "type": "url",
            "id": "button_link",
            "label": "Button Link"
        },
        {
            "type": "radio",
            "id": "button_type",
            "label": "Button Type",
            "options": [
                {
                    "value": "primary",
                    "label": "Primary Button"
                },
                {
                    "value": "secondary",
                    "label": "Secondary Button"
                },
                {
                    "value": "tertiary",
                    "label": "Tertiary Button"
                }
            ],
            "default": "primary"
        }
    ]
}
{% endschema %}

{% style %}
    #shopify-section-{{ section.id }} {
        --row: {{ section.settings.spacing_mobile }}px;
        --row-desk: {{ section.settings.spacing_desktop }}px;
        --bg-colour: {{ section.settings.background_colour }};
    }
{% endstyle %}

{% if section.settings.width == 'full' %}
    {% assign is_contained = 'o-container--full' %}
{% else %}
    {% assign is_contained = 'o-container--box' %}
{% endif %}

{% render 'theme_assets', layout: 'section_page-banner' %}
<div class="c-page-banner">
    {% if section.settings.image != blank %}
        {% assign mobile_image = section.settings.mobile_image %}
        {% if mobile_image == blank %}
            {% assign moblie_image = section.settings.image %}
        {% endif %}
        {%- render 'object_image' with section.settings.image,
            mobile_image: mobile_image,
            mobile_ratio: '400/300',
            class: 'c-page-banner__image o-ar o-ar--banner-half'
            img_class: "o-ar__item "
          
        -%}
    {% endif %}

    <div class="c-page-banner__container">
        <div class="o-container {{ is_contained }} c-page-banner__inner">
            <div class="c-page-banner__content {{ section.settings.content_position }}">
                {% if section.settings.title != blank %}
                    <h3 class="c-page-banner__title {% if section.settings.show_box %}box{% endif %}">{{ section.settings.title }}</h3>
                {% endif %}
        
                {% if section.settings.content != blank %}
                    <div class="c-page-banner__desc" style="--text-align: {{ section.settings.content_position }};">
                        {{ section.settings.content | strip_html }}
                    </div>
                {% endif %}
                
                {% if section.settings.button_link != blank and section.settings.button_label != blank  %}
                    {%- render 'object_button',
                        theme: section.settings.button_type,
                        text: section.settings.button_label,
                        href: section.settings.button_link
                    -%}
                {% endif %}
            </div>
        </div>
    </div>
</div>
