        },
        {
            "type": "range",
            "id": "image_y_position",
            "label": "Image Y-axis Position",
            "min": 1,
            "max": 100,
            "default": 50,
            "unit": "%"
        },
        {
            "type": "select",
            "id": "content_position",
            "label": "Content Position",
            "default": "center",
            "options": [
                {
                    "value": "left",
                    "label": "Left"
                },
                {
                    "value": "center",
                    "label": "Center"
                },
                {
                    "value": "right",
                    "label": "Right"
