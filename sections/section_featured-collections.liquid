                        },
                        {
                            "value": "secondary",
                            "label": "Secondary Button"
                        },
                        {
                            "value": "tertiary",
                            "label": "Tertiary Button"
                        }
                    ],
                    "default": "primary"
                }
            ]
        }
    ]
}
{% endschema %}

{% style %}
    #shopify-section-{{ section.id }} {
        --row: {{ section.settings.spacing_mobile }}px;
        --row-desk: {{ section.settings.spacing_desktop }}px;
        --bg-colour: {{ section.settings.background_colour }};
    }
{% endstyle %}

{% if section.settings.width == 'full' %}
    {% assign is_contained = 'o-container--full' %}
{% else %}
    {% assign is_contained = 'o-container--box' %}
{% endif %}

{% render 'theme_assets', layout: 'section_featured-collections' %}

<div class="o-container {{ is_contained }}">
    <div class="c-featured-collections">

        <div class="c-featured-collections__list">
            <div class="c-carousel__slider  js-carousel" data-settings="setGallerySize watchCSs" {{ carousel_mq | prepend: 'data-carousel-mq="' | append: '"' }}>
                {% for block in section.blocks limit: section.settings.max_count %}
                    {% assign collection = collections[block.settings.collection] %}
                    {% assign image = block.settings.image | default: collection.image %}
                    {% assign mobile_image = block.settings.mobile_image | default: collection.image %}
                    {% assign title = block.settings.title | default: collection.title %}
                    {% assign button_text = block.settings.button_label | default: 'Shop now' %}
                    {% assign button_link = block.settings.button_link | default: collection.url %}

                    <div class="c-featured-collections__item c-carousel__slide">
                        {%- render 'object_image' with image,
                            mobile_image: mobile_image,
                            mobile_ratio: "366/240"
                            class: 'c-carousel__img  o-ar  o-ar--square',
                            img_class: "o-ar__item"
                            width: "680",
                            height: "400"
                        -%}

                        <div class="c-featured-collections__item-content">
                            <h3 class="title">{{ title }}</h3>

                            <a href="{{ button_link }}" class="button">
                                {{ button_text }}
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>

            {%- if section.blocks.size > 1 -%}
                <div class="c-carousel__nav  c-carousel__nav--overlay c-featured-collections__carousel">
                    <button class="c-carousel__arrow  c-carousel__arrow--prev  js-carousel-arrow"
                        data-direction="prev" aria-label="Previous">
                        {% render 'object_icon', 
                            icon: 'chevron-left'
                        %}                                                   
                    </button>

                    <button class="c-carousel__arrow  c-carousel__arrow--next  js-carousel-arrow"
                        data-direction="next" aria-label="Next">
                        {% render 'object_icon', 
                            icon: 'chevron-right'
                        %}                                                                            
                    </button>
                </div>
            {%- endif -%}
        </div>
    </div>
</div>

