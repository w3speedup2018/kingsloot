{% endschema %}

{% style %}
    #shopify-section-{{ section.id }} {
        --row: {{ section.settings.spacing_mobile }}px;
        --row-desk: {{ section.settings.spacing_desktop }}px;
        --bg-colour: {{ section.settings.background_colour }};
    }
{% endstyle %}


{% render 'theme_assets', layout: 'section_image-text1' %}

<div class="o-container o-container--full">
    <div class="c-image-text1 {% if section.settings.image_direction == 'right' %} row-reserve{% endif %}">

        <div class="c-image-text1__image">
            {%- render 'object_image' with section.settings.image,
                mobile_image: section.settings.mobile_image,
                mobile_ratio:'434/434'
                class: 'o-ar',
                img_class: "o-ar__item"
                width: "756",
                height: "756"
            -%}
            
        </div>
        
        <div class="c-image-text1__content">
            {% if section.settings.title != blank %}
                <h3 class="c-image-text1__title"> {{section.settings.title}}</h3>

            {% endif %}
            {% if section.settings.description != blank %}
                <div class="c-image-text1__description">
                    {{section.settings.description}}
                </div>
            {% endif %}
            {% if section.settings.button_label != blank %}
                <div class="c-image-text1__btn">
                    <a class="o-button  o-button--secondary" href="{{section.settings.button_link}}">
                        {{section.settings.button_label}}
                    </a>
                </div>
            {% endif %}

        </div>
            
    </div>
</div>

