{% render 'theme_assets', layout: 'register' %}

<section class="c-register o-container  o-container--short  o-grid  o-grid--wrap  u-pt-32  u-pb-32">
    <header  class="o-grid__item">
        <h1 class="t-size--h4  t-align--center">
            {{ 'customer.register.header' | t }}
        </h1>
    </header>

    <div class="o-grid__item c-register__content">
        {% render 'form_register' %}
    </div>
    <div class="text-center">
        {%- assign text = 'customer.login' | t -%}
        {%- render 'object_button', 
            theme: 'secondary', 
            text: text, 
            class: 'o-button--full',
            href: routes.account_login_url, 
        -%}
    </div>
</section>

