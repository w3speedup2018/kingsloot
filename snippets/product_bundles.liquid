if Input.cart.line_items.size > 0
  Input.cart.line_items.each do |line_item|
    line_item.properties.each do |key, value|
      # puts line_item_property
      if key.include? "_itemDiscount"
          SAVING_PRICE = Money.new(cents: value)
          NEW_LINE_PRICE = line_item.line_price - SAVING_PRICE
          line_item.change_line_price(NEW_LINE_PRICE, message: "Bundle price")
      end
    end
  end
end
Output.cart = Input.cart


