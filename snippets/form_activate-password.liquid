{% form 'activate_customer_password', class: 'c-form' %}
    <header class="c-account-login__header  u-mb-25">
        {%- capture title -%}{{ 'customer.activate_account.title' | t | capitalize }}{%- endcapture -%}
        {%- capture text -%}{{ 'customer.activate_account.subtext' | t }}{%- endcapture -%}
        {%- render 'object_content',
            title: title,
            title_tag: 'h1',
            text: text
        -%}
    </header>

    <div class="c-form__inner">
        <div class="c-form__fields">
            {%- if form.errors -%}
                <div class="c-form__field  c-form__field--error  t-font-size--milli  u-mb-25">
                    <svg viewBox="0 0 24 24" focusable="false" fill="currentColor" width="16" height="16" aria-hidden="true"><path d="M12 1C5.9 1 1 5.9 1 12s4.9 11 11 11 11-4.9 11-11S18.1 1 12 1zm0 20c-5 0-9-4-9-9s4-9 9-9 9 4 9 9-4 9-9 9z"></path><circle cx="12" cy="17" r="1"></circle><path d="M12 14c.6 0 1-.4 1-1V8c0-.6-.4-1-1-1s-1 .4-1 1v5c0 .6.4 1 1 1z"></path></svg>
                    {{ form.errors | default_errors | strip_html }}
                </div>
            {%- endif -%}

            <div class="c-form__field  u-mb-25">
                {%- capture input_label -%}{{ 'customer.activate_account.password' | t }}{%- endcapture -%}
                {%- render 'object_input'
                ,   class: 'c-input--secondary'
                ,   type: 'password'
                ,   name: 'customer[password]'
                ,   label: input_label
                ,   attributes: 'required autocomplete="new-password"'
                ,   error: form.errors.messages['form']
                -%}
            </div>
            <div class="c-form__field  u-mb-25">
                {%- capture input_label -%}{{ 'customer.activate_account.password_confirm' | t }}{%- endcapture -%}
                {%- render 'object_input'
                ,   class: 'c-input--secondary'
                ,   type: 'password'
                ,   name: 'customer[password_confirmation]'
                ,   label: input_label
                ,   attributes: 'required autocomplete="new-password"'
                ,   error: form.errors.messages['form']
                -%}
            </div>
            <div class="c-form__field  c-form__field--cta">
                {%- capture button_text -%}{{ 'customer.activate_account.submit' | t }}{%- endcapture -%}
                {%- render 'object_button'
                ,   variant: 'secondary'
                ,   type: 'submit'
                ,   text: button_text
                -%}

                {%- capture button_text -%}{{ 'customer.activate_account.cancel' | t }}{%- endcapture -%}
                {%- render 'object_button'
                ,   variant: 'quinary'
                ,   type: 'submit'
                ,   text: button_text
                ,   attributes: 'name="decline"'
                -%}
            </div>
        </div>
    </div>
{% endform %}
