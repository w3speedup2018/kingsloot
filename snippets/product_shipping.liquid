{%- assign todayDate = 'now' | date: "%B %d" -%}
{%- assign date_format = "%m/%d" -%}
{% capture now_time_H %} {{'now' | date: "%H" }}{% endcapture %}
{% capture now_time_M %} {{'now' | date: "%M" }}{% endcapture %}
{% assign now_time = now_time_H | times: 100 | plus: now_time_M %}


{% assign time_flag = false %}
{% if now_time <= 1400 %}
    {% assign time_flag = true %}

    {% assign time_cal = 1400 | minus: now_time | divided_by: 100 %}
    {% assign time_value = "" %}
    {% if time_cal == 0 %}
        {% assign time_value = 1400 | minus: now_time | minus: 40 | append: " minutes" %}
    {% else %}
        {% assign time_value = time_cal| append: " hour(s)" %}
    {% endif %}
{% endif %}

