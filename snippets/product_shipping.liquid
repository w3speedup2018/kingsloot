        {%- unless todayDate == "1" -%}
            <p>{{section.settings.ship_text | replace: "Free Delivery", "<b>Free Delivery</b>" }} within {{time_value}} and receive by {{'now' | date: "%s" | plus : 432000 | date: date_format }}</p>
        {%- else -%}
            <p>{{section.settings.ship_text | replace: "Free Delivery", "<b>Free Delivery</b>" }} within {{time_value}} and receive by {{'now' | date: "%s" | plus : 604800 | date: date_format }}</p>
        {% endunless %}
    {% else %}
        {%- unless todayDate == "1" -%}
        {{section.settings.ship_text}} now and receive by {{'now' | date: "%s" | plus : 518400 | date: date_format }}
        {%- else -%}
