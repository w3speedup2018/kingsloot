{% form 'contact', class: 'c-form', id: 'ContactForm', data-name: 'contact' %}
    <div class="c-form__inner">
        {% if form.posted_successfully? %}
            <p class="">{{ 'contact.form.post_success' | t }}</p>
        {% else %}
            <div class="c-form__fields">
                {%- if form.errors -%}
                    <div class="c-form__field  c-form__field--error  t-font-size--milli  u-mb-25">
                        <svg viewBox="0 0 24 24" focusable="false" fill="currentColor" width="16" height="16" aria-hidden="true"><path d="M12 1C5.9 1 1 5.9 1 12s4.9 11 11 11 11-4.9 11-11S18.1 1 12 1zm0 20c-5 0-9-4-9-9s4-9 9-9 9 4 9 9-4 9-9 9z"></path><circle cx="12" cy="17" r="1"></circle><path d="M12 14c.6 0 1-.4 1-1V8c0-.6-.4-1-1-1s-1 .4-1 1v5c0 .6.4 1 1 1z"></path></svg>
                        {{ form.errors | default_errors | strip_html }}
                    </div>
                {%- endif -%}

                <div class="c-form__field  u-mb-20">
                    {%- capture input_label -%}<span class="t-font-weight--500  t-font-size--milli">{{ 'contact.form.name' | t }} *</span>{%- endcapture -%}
                    {%- capture input_value -%}{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}{%- endcapture -%}
                    {%- render 'object_input'
                    , class: 'c-input--secondary'
                    , type: 'text'
                    , name: 'contact[name]'
                    , label: input_label
                    , value: input_value
                    , error: form.errors.messages['form']
                    , attributes: 'required'
                    -%}
                </div>
                <div class="c-form__field  u-mb-20">
                    {%- capture input_label -%}<span class="t-font-weight--500  t-font-size--milli">{{ 'contact.form.email' | t }} *</span>{%- endcapture -%}
                    {%- capture input_value -%}{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}{%- endcapture -%}
                    {%- render 'object_input'
                    , class: 'c-input--secondary'
                    , type: 'email'
                    , name: 'contact[email]'
                    , label: input_label
                    , value: input_value
                    , error: form.errors.messages['form']
                    , attributes: 'required'
                    -%}
                </div>
                <div class="c-form__field  u-mb-20">
                    {%- capture input_label -%}<span class="t-font-weight--500  t-font-size--milli">{{ 'contact.form.phone' | t }}</span>{%- endcapture -%}
                    {%- capture input_value -%}{% if form.phone %}{{ form.phone }}{% endif %}{%- endcapture -%}
                    {%- render 'object_input'
                    , class: 'c-input--secondary'
                    , type: 'tel'
                    , name: 'contact[phone]'
                    , label: input_label
                    , value: input_value
                    , error: form.errors.messages['form']
                    -%}
                </div>
                <div class="c-form__field  u-mb-20">
                    {%- capture input_label -%}<span class="t-font-weight--500  t-font-size--milli">{{ 'contact.form.message' | t }} *</span>{%- endcapture -%}
                    {%- render 'object_input'
                    , class: 'c-input--secondary'
                    , field: 'textarea'
                    , name: 'contact[body]'
                    , label: input_label
                    , value: form.body
                    , error: form.errors.messages['form']
                    , attributes: 'required'
                    -%}
                </div>
                <div class="c-form__field  u-mb-20">
                    {%- capture input_label -%}<span class="t-font-size--milli">Join mailing list?</span>{%- endcapture -%}
                    {%- render 'object_checkbox'
                    , field: 'textarea'
                    , name: 'contact[mailing-list]'
                    , label: input_label
                    , value: 'yes'
                    , error: form.errors.messages['form']
                    -%}
                    <div class="t-font-size--micro  js-contact-gdpr" hidden>
                        To see how we process your data view our&nbsp;<a href="/policies/privacy-policy" target="_blank">Privacy Policy</a>.
                        By entering your email address and/or mobile number you are consenting to subscribe to marketing emails and acknowledge that you consent to our&nbsp;<a href="/policies/terms-of-service" target="_blank">Terms and Conditions</a>&nbsp;and&nbsp;<a href="/policies/privacy-policy" target="_blank">Privacy Policy</a>
                    </div>
                </div>
                <div class="c-form__field">
                    {%- render 'object_button'
                    , type: 'submit'
                    , variant: 'secondary'
                    , text: 'Get in touch'
                    , attributes: attributes
                    -%}
                </div>
            </div>
        {% endif %}
    </div>
{% endform %}
